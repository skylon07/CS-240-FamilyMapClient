<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MapFragment">

    <fragment
        android:id="@+id/supportMap"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mapBottomView" />

    <LinearLayout
        android:id="@+id/mapBottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50sp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:textAlignment="center">
        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:id="@+id/mapBottomIcon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapBottomText"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>